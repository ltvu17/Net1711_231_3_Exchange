@model SellDTO

<div class="form-group row">
    <div class="col-md-6">
        <label for="payment">Payment</label>
        @Html.DropDownListFor(model => model.PaymentMethod, new SelectList(new List<string> { "Cash", "VNPAY", "Momo" }), new { @class = "form-control" })
    </div>

    <div class="col-md-6">
    </div>
</div>
<div class="form-group row">
    <div class="col-md-6">
        <label for="1">Transaction</label>
        @Html.EditorFor(model => model.TransactionId, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.TransactionId)

    </div>

    <div class="col-md-6">
    </div>
</div>
<div class="form-group row">
    <div class="col-md-6">
        <label for="1">Note</label>
        @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.Note)

    </div>
    <div class="col-md-6">
        <label for="1">Cash customer pay</label>
        @Html.EditorFor(model => model.CashCustomerPay, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.CashCustomerPay)

    </div>

    <div class="col-md-6">
    </div>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
