            function delele(id) {
                console.log("ahsidhaoid" + id);
                var result = confirm("Are you sure to delete?");
                if (result) {
                    $.ajax({
                        url: '@Url.Action("DeleteProduct", "Product")' + `?id=${id}`,
                        type: "DELETE",
                        processData: false,
                        contentType: false,
                        success: function (result) {
                            loadData();
